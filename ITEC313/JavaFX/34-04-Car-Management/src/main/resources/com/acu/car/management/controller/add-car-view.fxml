<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<DialogPane prefHeight="200.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <GridPane hgap="10.0" vgap="30.0">
        <columnConstraints>
          <ColumnConstraints hgrow="ALWAYS" maxWidth="-Infinity" prefWidth="100.0" />
          <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Make:" />
            <Label text="Model:" GridPane.rowIndex="1" />
            <Label text="Year:" GridPane.rowIndex="2" />
            <Label text="Color:" GridPane.rowIndex="3" />
            <Label text="Mileage:" GridPane.rowIndex="4" />
            <Label text="Category:" GridPane.rowIndex="5" />
            <TextField fx:id="tfMake" prefHeight="26.0" prefWidth="167.0" GridPane.columnIndex="1" />
            <TextField fx:id="tfModel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="tfYear" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="tfColor" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="tfMileage" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <ComboBox fx:id="cbCategory" prefWidth="200.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="100.0" top="10.0" />
         </padding>
      </GridPane>
   </content>
   <buttonTypes>
      <ButtonType fx:constant="APPLY" />
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
</DialogPane>
